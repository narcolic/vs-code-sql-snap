{
  "name": "sql-snap",
  "displayName": "SQL Snap",
  "publisher": "DimitriosKarakatsanis",
  "description": "A VS Code extension providing keybindings for commonly used MSSQL commands and additional custom commands.",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/narcolic/vs-code-sql-snap.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Keymaps",
    "Other"
  ],
  "icon": "sql-snap-logo.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.runQueryBlock",
        "title": "Run Query Block"
      },
      {
        "command": "extension.toggleQueryResults",
        "title": "Toggle Query Results Panel"
      }
    ],
    "keybindings": [
      {
        "key": "f5",
        "command": "mssql.runQuery",
        "when": "editorTextFocus"
      },
      {
        "key": "f8",
        "command": "mssql.connect",
        "when": "editorLangId == sql"
      },
      {
        "key": "f9",
        "command": "mssql.changeDatabase",
        "when": "editorLangId == sql"
      },
      {
        "key": "ctrl+q",
        "command": "extension.toggleQueryResults",
        "when": "editorTextFocus && editorLangId == sql"
      },
      {
        "key": "ctrl+shift+E",
        "command": "extension.runQueryBlock",
        "when": "editorTextFocus && editorLangId == sql"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
